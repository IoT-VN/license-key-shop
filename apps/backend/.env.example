# Database
DATABASE_URL="postgresql://user:password@localhost:5432/license_key_shop?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Clerk Authentication
CLERK_SECRET_KEY="sk_test_xxxxx"
CLERK_WEBHOOK_SECRET="whsec_xxxxx"
CLERK_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n..."

# Stripe
STRIPE_SECRET_KEY="sk_test_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"
STRIPE_TAX_ID="tax_xxxxx"
STRIPE_WEBHOOK_ENDPOINT="https://your-api.railway.app/webhooks/stripe"

# Application
PORT=3001
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"

# Key Generation (ECDSA-P256)
# Option 1: Load from file paths
PRIVATE_KEY_PATH="./keys/private.pem"
PUBLIC_KEY_PATH="./keys/public.pem"

# Option 2: Load from environment (useful for production/HSM)
# LICENSE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."
# LICENSE_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n..."

# HMAC secret for integrity verification (min 32 chars)
HMAC_SECRET="your-hmac-secret-key-min-32-characters-long-change-this"

# Rate Limiting
RATE_LIMIT_TTL=3600
RATE_LIMIT_MAX=10000

# Security
JWT_SECRET="your-jwt-secret-key-min-32-chars"
API_KEY_SALT="your-api-key-salt"

# IP Reputation & Security
ABUSEIPDB_API_KEY="your-abuseipdb-api-key"
ENABLE_IP_REPUTATION="true"
