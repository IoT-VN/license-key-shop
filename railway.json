{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm --filter @license-key-shop/shared build && cd apps/backend && npx prisma generate && pnpm run build",
    "watchPatterns": ["apps/backend/**", "packages/shared/**", "railway.json"]
  },
  "deploy": {
    "startCommand": "cd apps/backend && pnpm run start:deploy",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
